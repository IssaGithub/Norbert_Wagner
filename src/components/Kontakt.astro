<section id="kontakt" class="py-16 md:py-24 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <p class="text-primary-600 font-semibold mb-2">Nimm Kontakt zu mir auf</p>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Gerne helfe ich dir weiter
      </h2>
      <p class="text-lg text-gray-600">
        Ich freue mich über deine Anfrage. Unverbindlich und direkt.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-12 max-w-6xl mx-auto">
      <!-- Kontaktinformationen -->
      <div class="space-y-8">
        <div class="bg-white p-8 rounded-xl shadow-lg">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">Norbert Wagner</h3>
          <p class="text-xl text-primary-600 font-semibold mb-6">Dein Finanzierungsexperte</p>
          
          <div class="space-y-4">
            <div class="flex items-start">
              <i class="fa-solid fa-phone text-2xl text-primary-600 mr-3 mt-1 flex-shrink-0"></i>
              <div>
                <p class="font-semibold text-gray-900">Telefon</p>
                <a href="tel:+4917020888551" class="text-primary-600 hover:text-primary-700">+49 170 20 888 51</a><br />
                <a href="tel:+4971304051015" class="text-primary-600 hover:text-primary-700">+49 7130 40 510 15</a>
              </div>
            </div>

            <div class="flex items-start">
              <i class="fa-solid fa-envelope text-2xl text-primary-600 mr-3 mt-1 flex-shrink-0"></i>
              <div>
                <p class="font-semibold text-gray-900">E-Mail</p>
                <a href="mailto:norbert.wagner@nowa-finanzen.de" class="text-primary-600 hover:text-primary-700 break-all">
                  norbert.wagner@nowa-finanzen.de
                </a>
              </div>
            </div>

            <div class="flex items-start">
              <i class="fa-solid fa-location-dot text-2xl text-primary-600 mr-3 mt-1 flex-shrink-0"></i>
              <div>
                <p class="font-semibold text-gray-900">Adresse</p>
                <p class="text-gray-600">Steigle 4<br />74182 Obersulm</p>
              </div>
            </div>
          </div>

          <div class="mt-8 pt-8 border-t border-gray-200">
            <p class="font-semibold text-gray-900 mb-4">Social Media</p>
            <div class="flex space-x-4">
              <a href="#" class="text-gray-600 hover:text-primary-600 transition-colors text-3xl" aria-label="LinkedIn">
                <i class="fa-brands fa-linkedin"></i>
              </a>
              <a href="#" class="text-gray-600 hover:text-primary-600 transition-colors text-3xl" aria-label="Xing">
                <i class="fa-brands fa-xing"></i>
              </a>
              <a href="#" class="text-gray-600 hover:text-primary-600 transition-colors text-3xl" aria-label="Instagram">
                <i class="fa-brands fa-instagram"></i>
              </a>
              <a href="#" class="text-gray-600 hover:text-primary-600 transition-colors text-3xl" aria-label="Facebook">
                <i class="fa-brands fa-facebook"></i>
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Kontaktformular -->
      <div class="bg-white p-8 rounded-xl shadow-lg">
        <form class="space-y-6" id="contact-form">
          <div>
            <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">Name *</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-600 focus:border-transparent transition-all"
            />
          </div>

          <div>
            <label for="telefon" class="block text-sm font-semibold text-gray-700 mb-2">Telefon *</label>
            <input 
              type="tel" 
              id="telefon" 
              name="telefon" 
              required 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-600 focus:border-transparent transition-all"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">Email *</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-600 focus:border-transparent transition-all"
            />
          </div>

          <div>
            <label for="nachricht" class="block text-sm font-semibold text-gray-700 mb-2">Nachricht *</label>
            <textarea 
              id="nachricht" 
              name="nachricht" 
              rows="5" 
              required 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-600 focus:border-transparent transition-all resize-none"
            ></textarea>
          </div>

          <div class="flex items-start">
            <input 
              type="checkbox" 
              id="datenschutz" 
              name="datenschutz" 
              required 
              class="mt-1 mr-3 w-4 h-4 text-primary-600 border-gray-300 rounded focus:ring-primary-600"
            />
            <label for="datenschutz" class="text-sm text-gray-600">
              Ich bin damit einverstanden, dass diese Daten zum Zweck der Kontaktaufnahme gespeichert und 
              verarbeitet werden. Mir ist bekannt, dass ich meine Einwilligung jederzeit widerrufen kann.
            </label>
          </div>

          <button 
            type="submit" 
            class="w-full bg-primary-600 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-primary-700 transition-colors"
          >
            Senden
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    alert('Vielen Dank für Ihre Nachricht! Ich werde mich zeitnah bei Ihnen melden.');
    form.reset();
  });
</script>

